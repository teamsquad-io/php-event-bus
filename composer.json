{
    "description": "A basic PHP EventBus Library",
    "name": "teamsquad.io/php-event-bus",
    "type": "library",
    "keywords": [
        "php",
        "event-bus"
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "php-amqplib/php-amqplib": "^v3.7.3",
        "doctrine/annotations": "^2.0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6.25",
        "vimeo/psalm": "^5.26.1",
        "phpstan/phpstan": "2.1.37",
        "symfony/var-dumper": "^5.4",
        "psalm/plugin-phpunit": "^0.19.0",
        "friendsofphp/php-cs-fixer": "^3.86"
    },
    "autoload": {
        "psr-4": {
            "TeamSquad\\EventBus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TeamSquad\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test-all": [
            "@test-quality",
            "@test-phpunit"
        ],
        "test-quality": [
            "@csrun",
            "@psalm",
            "@phpstan"
        ],
        "test-phpunit": "./vendor/bin/phpunit",
        "psalm": "./vendor/bin/psalm",
        "phpstan": "./vendor/bin/phpstan",
        "csfix": "./vendor/bin/php-cs-fixer fix src",
        "csrun": "./vendor/bin/php-cs-fixer fix --dry-run || ./vendor/bin/php-cs-fixer fix",
        "generate-consumer-config": [
            "composer dump-autoload -o",
            "TeamSquad\\Tests\\Unit\\Interfaces\\SampleConfigGeneratorController::generateConsumerConfig"
        ]
    },
    "config": {
        "platform": {
            "php": "8.0"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "license": "proprietary"
}
